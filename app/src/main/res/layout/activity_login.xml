<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_marginBottom="480dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/activity_login"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        app:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        app:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_login"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tv_register_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_phone_number"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="130dp" />

    <ImageView
        android:id="@+id/iv_logo_input_phone_number"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginLeft="29dp"
        android:src="@drawable/logo_input_phone_number"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="188dp" />

    <EditText
        android:id="@+id/et_input_phone_number"
        android:layout_width="262dp"
        android:layout_height="46dp"
        android:hint="@string/input_phone_number"
        android:inputType="phone"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="182dp" />

    <Button
        android:id="@+id/btn_continue"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="307dp"
        android:layout_height="41dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/login_button_selector"
        android:text="@string/click_continue"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="248dp" />

    <TextView
        android:id="@+id/option_phone_number_or_facebook_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="352dp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="308dp"
        android:layout_height="44dp"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="433dp" />


</android.support.constraint.ConstraintLayout>